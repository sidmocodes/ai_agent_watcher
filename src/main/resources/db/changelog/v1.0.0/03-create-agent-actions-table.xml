<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="03-create-agent-actions-table" author="agent-watcher">
        <comment>Create agent_actions table to track agent operations and tool usage</comment>
        
        <createTable tableName="agent_actions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_agent_actions"/>
            </column>
            
            <column name="agent_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="session_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="action_type" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            
            <column name="action_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            
            <column name="input_data" type="TEXT">
                <constraints nullable="true"/>
            </column>
            
            <column name="output_data" type="TEXT">
                <constraints nullable="true"/>
            </column>
            
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            
            <column name="start_time" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            
            <column name="end_time" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            
            <column name="duration_ms" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            
            <column name="error_message" type="TEXT">
                <constraints nullable="true"/>
            </column>
            
            <column name="related_thought_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="agent_actions"
                baseColumnNames="related_thought_id"
                constraintName="fk_agent_actions_thought"
                referencedTableName="agent_thoughts"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
        
        <rollback>
            <dropTable tableName="agent_actions"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
